<%- include('../../partials/header') %>

    <% if (flights.length) { %>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departure</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(flight => { %>
                <tr>
                    <td><%= flight.airline %></td>
                    <td><%= flight.airport %></td>
                    <td><%= flight.flightNo %></td>
                    <td><%= flight.departs.toISOString().slice(0, 16) %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
        <h3>No flights to show right now</h3>
    <% } %>
    <a href="/flights/new">Add a New Flight</a>

<%- include('../../partials/footer') %>